# main.py
def mean(*args): return sum(*args)/len(*args);

# tests.py
from main import mean; import unittest;

class TestMean(unittest.TestCase):
    def test_1(self):
        self.assertEqual(mean([10, 10, 10]), 10)

    def test_2(self):
        self.assertEqual(mean([5, 3, 4]), 4)

if __name__ == '__main__':
    unittest.main()